package org.training.leisure.swimmingpool;

import java.lang.Number;

rule "CalPersonAge"
	dialect "mvel"
	ruleflow-group "init"
	when
		pp : Person( bdate : birthdate != null , age == ( -1.0 ) )
				Quote( curDate : quoteDate != null )
	then
		modify( pp ) {
						setAge( AgeCalculationYear(bdate,curDate) ), 
						setStandardPrice( -1.0 )
				}
end